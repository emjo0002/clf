---
const { data } = Astro.props;
---

<div class="grid_1-1">
  <div class="text">
    <h3>{data.name}</h3>
    <p>{data.teaser}</p>

    <a href={`type/udstillinger/${data.id}`}><p>LÃ†S MERE -----------></p></a>
  </div>
  <div class="image">
    <img src={"../../../public/img/1000/" + data.image} alt="" class="card_v_billede" />
  </div>
</div>

<style>
  h3 {
    font-size: 2rem;
    margin: 0%;
  }

  p {
    max-width: 75%;
  }

  .grid_1-1 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-top: 8%;
  }
  .grid_1-1:nth-child(odd) .text {
    order: 10;
  }

  .card_v_billede {
    width: 100%;
    height: auto;
  }

  p + p {
    margin-top: 10%;
  }
</style>
